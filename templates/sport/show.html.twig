{% block title %}Sport{% endblock %}

{% block body %}
    <h1>Sport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sport.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sport.name }}</td>
            </tr>
